<?xml version="1.0" encoding="utf-8"?>
<!--
-->
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textViewFatValue"
                android:layout_width="119dp"
                android:layout_height="68dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                tools:text="4"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/textViewSaltValue"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewNutGrade" />

            <TextView
                android:id="@+id/textViewSaltValue"
                android:layout_width="119dp"
                android:layout_height="68dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                tools:text="101"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/textViewSugarValue"
                app:layout_constraintRight_toLeftOf="@+id/textViewFatValue"
                android:layout_marginTop="32dp"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/textViewNutGrade" />

            <TextView
                android:id="@+id/textViewSaltLabel"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:text="@string/salt"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintBottom_toTopOf="@+id/textViewSaltValue"
                app:layout_constraintLeft_toRightOf="@+id/textViewSugarValue" />

            <TextView
                tools:text="Product Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewProductName"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.63" />

            <TextView
                android:id="@+id/textViewNutGrade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewProductName"
                android:layout_marginRight="32dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/textViewCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="250 Cal"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintRight_toLeftOf="@+id/textViewNutGrade"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.377"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintVertical_bias="0.253"
                app:layout_constraintBottom_toBottomOf="@+id/textViewNutGrade"
                app:layout_constraintTop_toTopOf="@+id/textViewNutGrade" />

            <TextView
                android:id="@+id/textViewSugarLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sugar"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintBottom_toTopOf="@+id/textViewSugarValue"
                app:layout_constraintLeft_toLeftOf="@+id/textViewSugarValue" />

            <TextView
                android:id="@+id/textViewSugarValue"
                android:layout_width="119dp"
                android:layout_height="68dp"
                tools:text="56"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/textViewSaltValue"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewNutGrade" />

            <TextView
                android:id="@+id/textViewFatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fat"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintBottom_toTopOf="@+id/textViewFatValue"
                app:layout_constraintLeft_toLeftOf="@+id/textViewFatValue" />

            <Button
                android:id="@+id/buttonFindAlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_alternatives"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewSaltValue"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewTestImage"
                android:contentDescription="test" />




        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</layout>