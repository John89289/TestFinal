<?xml version="1.0" encoding="utf-8"?>
<!--
-->
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textViewFatValue"
                android:layout_width="119dp"
                android:layout_height="68dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                tools:text="4"
                android:gravity="center"
                tools:layout_editor_absoluteY="253dp"
                tools:layout_editor_absoluteX="249dp" />

            <TextView
                android:id="@+id/textViewSaltValue"
                android:layout_width="119dp"
                android:layout_height="68dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                tools:text="101"
                android:gravity="center"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="253dp" />

            <TextView
                android:id="@+id/textViewSaltLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-638dp"
                android:text="@string/salt"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintLeft_toLeftOf="@+id/textViewSaltValue"
                android:layout_marginBottom="-363dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewSaltValue" />

            <TextView
                tools:text="Product Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewProductName"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                tools:layout_constraintTop_creator="1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                tools:layout_constraintLeft_creator="1"/>

            <TextView
                android:id="@+id/textViewNutGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:layout_marginRight="31dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewProductName" />

            <TextView
                android:id="@+id/textViewCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="250 Cal"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:layout_marginTop="51dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewProductName"
                app:layout_constraintRight_toLeftOf="@+id/textViewNutGrade"
                android:layout_marginRight="78dp" />

            <TextView
                android:id="@+id/textViewSugarLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sugar"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/textViewSugarValue"
                android:layout_marginBottom="-1dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewSugarValue" />

            <TextView
                android:id="@+id/textViewSugarValue"
                android:layout_width="119dp"
                android:layout_height="68dp"
                tools:text="56"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:gravity="center"
                tools:layout_editor_absoluteY="253dp"
                tools:layout_editor_absoluteX="11dp" />

            <TextView
                android:id="@+id/textViewFatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fat"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/textViewFatValue"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewFatValue" />

            <Button
                android:id="@+id/buttonFindAlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_alternatives"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewSaltValue"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>